{
    "name": "crate-backend",
    "version": "1.0.1",
    "author": "Noureddine HAOUARi <haouarin@gmail.com>",
    "description": "this is the back-end of CRATEv2 application",
    "main": "./lib/session.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/haouarin/jquery-crate.git"
    },
    "keywords": [
        "Random Peer Sampling",
        "Adaptive",
        "browser-to-browser communication",
        "WebRTC"
    ],
    "dependencies": {
        "BigInt": "^5.4.5",
        "animal": "0.0.0",
        "animals": "git+https://github.com/nhaouari/animals.git#master",
        "brace": "0.5.x",
        "clone": "^1.0.3",
        "dateformat": "^3.0.3",
        "foglet-core": "git+https://github.com/RAN3D/foglet-core.git#9daa88ca46d4b4991e77901d49b6ca080974fec9",
        "jquery-qrcode": "git+https://github.com/lrsjng/jquery-qrcode.git#master",
        "lodash": "^4.17.4",
        "lodash.merge": "^4.6.1",
        "lseqtree": "^1.0.0",
        "marked": "0.3.x",
        "request": "^2.87.0",
        "shortid": "*",
        "simple-peer": "^8.1.1",
        "socket.io-client": "1.3.x",
        "sorted-cmp-array": "2.0.x",
        "store": "^2.0.12",
        "store.js": "^1.0.4",
        "string-hash": "1.1.x",
        "unicast-definition": "^0.1.0",
        "uuid": "^3.0.1",
        "version-vector-with-exceptions": "^0.1.0"
    },
    "devDependencies": {
        "uglify-js": "^1.3.5",
        "debug": "^2.6.1",
        "brfs": "1.4.x",
        "browserify": "6.2.x",
        "wrtc": "^0.1.4",
        "esdoc": "^1.0.4",
        "esdoc-ecmascript-proposal-plugin": "^1.0.0",
        "esdoc-node": "^1.0.3",
        "esdoc-standard-plugin": "^1.0.0"
    },
    "browser": {
        "jquery-qrcode": "./node_modules/jquery-qrcode/dist/jquery-qrcode.js"
    },
    "browserify": {
        "transform": [
            "brfs"
        ]
    },
    "scripts": {
        "debug": "browserify lib/session.js --standalone session --debug > build/jquery-crate.bundle.debug.js",
        "build": "browserify lib/session.js --standalone session > build/jquery-crate.bundle.json",
        "watch": "watchify lib/session.js --standalone session -o build/jquery-crate.bundle.js -d -v",
        "docs": "esdoc -c esdoc.json"
    },
    "license": "MIT"
}
